<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="92dp"
              android:background="#fff"
              android:layout_marginBottom="8dp"
>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
    >
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="19dp"
                    android:layout_marginTop="16dp"
                    android:orientation="vertical">
                <TextView
                        android:id="@+id/voo_departure_local"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:text="CNF"/>
                <TextView
                        android:id="@+id/voo_departure_hour"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:text="13:30"/>

            </LinearLayout>
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="10dp">
                <TextView
                        android:id="@+id/voo_arrival_local"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:text="GRU"/>
                <TextView
                        android:id="@+id/voo_arrival_hour"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:text="15:55"/>
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <TextView
                    android:id="@+id/voo_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:layout_marginStart="19dp"
                    android:text="1h30"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text=", "/>
            <TextView
                    android:id="@+id/voo_stops"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="1 parada"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingRight="26dp"
            android:orientation="vertical"
            android:layout_alignParentEnd="true"
            android:gravity="end">
        <TextView
                android:id="@+id/voo_sale_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="130dp"
                android:text="144,50"/>
        <Button
                android:layout_width="125dp"
                android:layout_height="25dp"
                android:layout_marginStart="78dp"
                android:text="Comprar"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:background="#1abc9c"
        />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:layout_marginStart="118dp"
                android:text="Valor total c/ taxas"/>

    </LinearLayout>

</RelativeLayout>